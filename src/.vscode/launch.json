    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "0.0.0.0:9090",
            ],
            "django": true,
            "env": {
                "CORE_URL": "http://core:5000",
                "DEBUG": "True",
            },
            "justMyCode": false,
        },
        {
            "name": "Django CMD: load_initial_data",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "load_initial_data"
            ],
            "env": {
                "CREATE_FAKE_DATA": "True"
            },
            "django": true,
            "justMyCode": true
        }
    ]
}